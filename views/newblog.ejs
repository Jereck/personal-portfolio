<% include partials/header %>

    <div id="blog">
        <div class="new-blog-form">
            <h1 class="blog-title">New Blog</h1>
            <form action="/blogs" method="POST">
                <div class="field">
                    <label class="new-blog-label">Title</label>
                    <input class="blog-input" type="text" name="blog[title]">
                </div>
                <div class="field">
                    <label class="new-blog-label">Image</label>
                    <input class="blog-input" type="text" name="blog[image]">
                </div>
                <div class="field">
                    <label class="new-blog-label">Blog Post</label>
                    <textarea id="editor" class="blog-input-textarea" type="text" name="blog[body]"></textarea>
                </div>
                <div class="field">
                    <input class="blog-button" type="submit">
                </div>
            </form>
        </div>
    </div>

<% include partials/footer %>