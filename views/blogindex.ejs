<% include partials/header %>

<div id='blog'>
    <h1 class="blog-title">Blog</h1>

    <% blogs.forEach(function(blog){ %>
        <div class="blog-box">
            <h2 class="blog-box-title"><%= blog.title %></h2>
            <img src="<%= blog.image %>" class="blog-box-image" />
            <span class="blog-box-date"><%= blog.created.toDateString() %></span>
            <p class="blog-box-body"><%- blog.body %></p>
            <a href="/blogs/<%= blog._id %>">Read More</a>
        </div>
    <% }) %>
</div>

<% include partials/footer %>