<% include partials/header %>

<div id='blog'>
    <div class="show-container">
        <h1 class='show-title'><%= blog.title %></h1>
        <span class="show-date"><%= blog.created.toDateString() %></span>
        <img class="show-image" src="<%= blog.image %>" />
    </div>
    <p class="show-content"><%- blog.body %></p>

    <% if(currentUser) { %>
        <a href="/blogs/<%= blog._id %>/edit" class="edit-button">Edit</a>
        <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" class="delete-button">
            <button>Delete</button>
        </form>
    <% } %>
    
</div>

<% include partials/footer %>